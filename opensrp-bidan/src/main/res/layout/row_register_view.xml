<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_row_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/customAppThemeDarkest"
    android:gravity="center_vertical"
    android:hapticFeedbackEnabled="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/registerIconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_presumptive_patients" />

    <TextView
        android:id="@+id/registerTitleView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/registerIconView"
        android:adjustViewBounds="false"
        android:gravity="center_vertical"
        android:scaleType="centerInside"
        android:text="Register Name"
        android:textColor="@color/status_bar_text_almost_white"
        android:textSize="@dimen/register_font_size" />

    <TextView
        android:id="@+id/patientCountView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/registerTitleView"
        android:gravity="center_vertical"
        android:paddingLeft="10px"
        android:text="(0)"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/register_font_size"
        android:visibility="visible" />

    <TextView
        android:id="@+id/patientDueOverdueCountView"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:background="@drawable/elliptical_red_background"
        android:padding="0px"
        android:paddingLeft="4px"
        android:paddingRight="5px"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/register_font_size"
        android:visibility="visible" />

</RelativeLayout>